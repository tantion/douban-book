{
    "manifest_version": 2,

    "name": "豆瓣读书助手",
    "description": "让豆瓣读书支持下载或在线阅读电子书。",
    "version": "0.0.1",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*"
     ],
    "icons": {
        "128": "icon.png",
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png"
    },
    "web_accessible_resources": [
        "config.js",
        "seajs/*.*",
        "js/*.*",
        "lib/*.*",
        "images/*.*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [{
        "matches": ["http://book.douban.com/*"],
        "css":     ["bootstrap.css"],
        "js":      ["bootstrap.js"],
        "run_at":  "document_end"
    }]
}
