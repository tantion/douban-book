{
    "manifest_version": 2,

    "name": "豆瓣读书助手",
    "description": "让豆瓣读书支持下载或在线阅读电子书。",
    "version": "0.3.2",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
     ],
    "icons": {
        "128": "icon.png",
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png"
    },
    "web_accessible_resources": [
        "images/*.*"
    ],
    "background": {
        "scripts": [
        ]
    },
    "content_scripts": [{
        "matches": [
            "http://book.douban.com/subject/*",
            "https://book.douban.com/subject/*",
            "http://read.douban.com/ebook/*",
            "https://read.douban.com/ebook/*"
        ],
        "css":     ["bootstrap.css"],
        "js":      ["bootstrap.js"],
        "run_at":  "document_end"
    }]
}
